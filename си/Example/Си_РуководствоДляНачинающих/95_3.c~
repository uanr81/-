#include <stdio.h>
#include <string.h>
int main( )
{
  int x = 1, y = 1, var;
  printf("Ведите количество чисел : ");
  scanf("%d", &var);
  printf("%d грн получит за %d день, общий доход составит %d грн. \n", y, y, x);
  while( y++ < var){
    x = x + y;
    printf("%d грн получит за %d день, общий доход составит %d грн. \n", y , y, x);
  }
  printf("До свидания!\n");
}
